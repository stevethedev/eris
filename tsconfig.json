{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "rootDir": "src",
    "outDir": "dist",
  },
  "include": ["src/**/*.ts","src/**/*.d.ts","src/**/*.js"],
}
